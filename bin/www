#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../src/server/app');
var debug = require('debug')('Unicorn:server');
var http = require('http');

///**
// * Set up Webpack
// *
// * Integration inspired by: https://github.com/christianalfoni/webpack-express-boilerplate/blob/master/server.js
// */
//const isDeveloping = process.env.NODE_ENV !== 'production';
